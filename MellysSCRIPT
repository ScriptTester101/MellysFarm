local TabBar = Instance.new("Frame",Frame)
TabBar.Size = UDim2.fromOffset(130,350)
TabBar.Position = UDim2.fromOffset(10,60)
TabBar.BackgroundColor3 = Color3.fromRGB(55,55,55)
Instance.new("UICorner",TabBar)
