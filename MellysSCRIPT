-- LOGIC
local player = game.Players.LocalPlayer
local EquipLoop = false

local function UpdateLabel()
	local char = player.Character
	if not char then return end

	local name = ToolBox.Text
	local count = 0

	for _,v in ipairs(char:GetChildren()) do
		if v:IsA("Tool") and v.Name == name then
			count += 1
		end
	end

	if count > 0 then
		EquippedLabel.Text = "Equipped: "..name.." x"..count
	else
		EquippedLabel.Text = "Equipped: None"
	end
end

EquipBtn.MouseButton1Click:Connect(function()
	EquipLoop = not EquipLoop
	EquipBtn.Text = EquipLoop and "Equipping..." or "Equip All"
end)

UnequipBtn.MouseButton1Click:Connect(function()
	EquipLoop = false
	EquipBtn.Text = "Equip All"

	local char = player.Character
	if not char then return end

	for _,tool in ipairs(char:GetChildren()) do
		if tool:IsA("Tool") then
			tool.Parent = player.Backpack
		end
	end

	UpdateLabel()
end)

-- AUTO EQUIP LOOP
task.spawn(function()
	while task.wait(0.4) do
		if not EquipLoop then continue end

		local char = player.Character
		if not char then continue end

		local backpack = player:FindFirstChild("Backpack")
		if not backpack then continue end

		local name = ToolBox.Text

		for _,tool in ipairs(backpack:GetChildren()) do
			if tool:IsA("Tool") and tool.Name == name then
				tool.Parent = char
			end
		end

		UpdateLabel()
	end
end)

-- RESPAWN SAFE
player.CharacterAdded:Connect(function()
	task.wait(1)
	if EquipLoop then
		EquipBtn.Text = "Equipping..."
	end
	UpdateLabel()
end)

--========================
-- FARM TOGGLE (FINAL / MAX SPEED / STABLE)
--========================
local farmSection = Section(MainTab, "Farming")

local FarmBtn = Instance.new("TextButton", farmSection)
FarmBtn.Size = UDim2.new(1,0,0,40)
FarmBtn.Text = "Start Farm"
FarmBtn.Font = Enum.Font.GothamBold
FarmBtn.TextSize = 14
FarmBtn.BackgroundColor3 = Color3.fromRGB(85,85,85)
FarmBtn.TextColor3 = Color3.fromRGB(235,235,235)
Instance.new("UICorner", FarmBtn)

local Farming = false
local RunService = game:GetService("RunService")
local farmConnection = nil

FarmBtn.MouseButton1Click:Connect(function()
	Farming = not Farming
	FarmBtn.Text = Farming and "Farming..." or "Start Farm"

	if Farming and not farmConnection then
		farmConnection = RunService.Heartbeat:Connect(function()
			local char = Player.Character
			if not char then return end

			local humanoid = char:FindFirstChildOfClass("Humanoid")
			if not humanoid or humanoid.Health <= 0 then return end

			for _,tool in ipairs(char:GetChildren()) do
				if tool:IsA("Tool") then
					task.spawn(function()
						pcall(function()
							tool:Activate()
						end)
					end)
				end
			end
		end)
	elseif not Farming and farmConnection then
		farmConnection:Disconnect()
		farmConnection = nil
	end
end)

-- safety reset on death
Player.CharacterAdded:Connect(function()
	if farmConnection then
		farmConnection:Disconnect()
		farmConnection = nil
	end
	Farming = false
	FarmBtn.Text = "Start Farm"
end)








