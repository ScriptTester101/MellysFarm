ApplyFPS.TextColor3 = Color3.fromRGB(235,235,235)
ApplyFPS.BackgroundColor3 = Color3.fromRGB(90,90,90)
Instance.new("UICorner", ApplyFPS)

ApplyFPS.MouseButton1Click:Connect(function()
	local cap = tonumber(FPSBox.Text)

	if not cap then
		return
	end

	if cap <= 0 then
		FPSLabel.Text = "FPS Cap: Unlimited"
		pcall(function()
			setfpscap(0)
		end)
	else
		if cap < 30 then cap = 30 end
		if cap > 1000 then cap = 1000 end

		FPSLabel.Text = "FPS Cap: "..cap
		pcall(function()
			setfpscap(cap)
		end)
	end
end)

